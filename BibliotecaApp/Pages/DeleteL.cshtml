@page "{id:int}"
@model BibliotecaApp.Pages.DeleteLModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Remover Livro</title>
    <link rel="stylesheet" href="/css/delete.css" />
</head>
<body>
    <h1>Remover Livro</h1>

    <h3>Tem certeza que deseja remover este Livro?</h3>
    <div class="form">
        <div>
            <dl class="row">
                <dt class="col-sm-2">Nome</dt>
                <dd class="col-sm-10">@Model.Livro.nomeLivro</dd>
                <dt class="col-sm-2">Ano</dt>
                <dd class="col-sm-10">@Model.Livro.ano</dd>
                <dt class="col-sm-2">Autor</dt>
                <dd class="col-sm-10">@Model.Livro.autor</dd>
                <dt class="col-sm-2">Sinopse</dt>
                <dd class="col-sm-10">@Model.Livro.sinopse</dd>
            </dl>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Livro.id" />
            <button type="submit" class="btn btn-danger">Remover</button>
            <a asp-page="./ListaLivro" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>
