@page "{id:int}"
@model BibliotecaApp.Pages.DeleteModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Remover Cliente</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <h1>Remover Cliente</h1>

    <h3>Tem certeza que deseja remover este cliente?</h3>
    <div>
        <h4>Cliente</h4>
        <div>
            <dl class="row">
                <dt class="col-sm-2">Nome</dt>
                <dd class="col-sm-10">@Model.Cliente.nomeCliente</dd>
                <dt class="col-sm-2">Idade</dt>
                <dd class="col-sm-10">@Model.Cliente.idade</dd>
                <dt class="col-sm-2">Endereço</dt>
                <dd class="col-sm-10">@Model.Cliente.endereco</dd>
                <dt class="col-sm-2">Contato</dt>
                <dd class="col-sm-10">@Model.Cliente.contato</dd>
            </dl>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Cliente.idcliente" />
            <button type="submit" class="btn btn-danger">Remover</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>
