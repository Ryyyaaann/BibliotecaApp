@page "{id:int}"
@model BibliotecaApp.Pages.EditModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Editar Cliente</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <h1>Editar Cliente</h1>

    <form method="post">
        <input type="hidden" asp-for="Cliente.idcliente" />
        <label for="NomeCliente">Nome:</label>
        <input type="text" asp-for="Cliente.nomeCliente" required /><br />
        <label for="Idade">Idade:</label>
        <input type="number" asp-for="Cliente.idade" required /><br />
        <label for="Endereco">Endereço:</label>
        <input type="text" asp-for="Cliente.endereco" required /><br />
        <label for="Contato">Contato:</label>
        <input type="text" asp-for="Cliente.contato" required /><br />
        <button type="submit">Salvar</button>
    </form>

    <a asp-page="./Index">Cancelar</a>
</body>
</html>
